<%= form_for [topic, post, summary] do |f| %>
    <div class= "form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control', placeholder: "Enter summary title" %>
    </div>
    <div class="form-group">
        <%= f.text_area :description, rows: 8, class: 'form-control', placeholder: "Enter summary body" %>
    </div>
    <div class="form-group">
        <%= f.submit "Save", class: 'btn btn-success' %>
    </div>
<% end %>