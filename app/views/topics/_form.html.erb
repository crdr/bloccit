<%= form_for topic do |f| %>
  <% if topic.errors.any? %>
    <div class= "alert alert-danger">
      <h4>There are <%= pluralize(topic.errors.count, "error") %></h4>
        <ul>
          <% topic.errors.full_messaage.each do %>
            <li><%= msg %></li>
          <% end %>
        </ul>
        </div>
    <% end %>
    <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control', placeholder: "Enter topic title" %>
    <%= f.label :description %>
      <%= f.text_area :description, rows: 8, class: 'form-control', placeholder: "Enter topic description" %>
  <div class="form-group">
    <%= f.submit "Save", class: 'btn btn-success' %>
  </div>
  <% end %>